{
  "name": "rs-fmt-check",
  "version": "2.0.0",
  "private": false,
  "description": "Run rustfmt and annotate the diff with suggested changes",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts --minify",
    "format": "prettier --write 'src/**/*.ts'",
    "watch": "ncc build src/main.ts --watch --minify",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clechasseur/rs-fmt-check.git"
  },
  "keywords": [
    "actions",
    "rust",
    "cargo",
    "rustfmt"
  ],
  "author": "clechasseur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clechasseur/rs-fmt-check/issues"
  },
  "dependencies": {
    "@clechasseur/rs-actions-core": "^2.0.0",
    "string-argv": "^0.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^20.5.9",
    "@vercel/ncc": "0.38.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^3.0.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5"
  }
}
